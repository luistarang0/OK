@{
    ViewData["Title"] = "Registro";
}

@section Styles {
<link rel="stylesheet" href="@Url.Content("~/css/estilosR.css")" />
}

    <section class="auth-container">
        <div class="auth-content">
            <div class="auth-left">
                <h1><span class="gradient-text">Únete a</span> Fundación OK</h1>
                <p>Crea tu cuenta para empezar a jugar con propósito</p>

                <form class="auth-form" method="POST" asp-action="Registro" asp-controller="Login">
                    <div class="form-group">
                        <label for="nombre">Nombre completo</label>
                        <input type="text" id="nombre" name="nombre" placeholder="Ingresa tu nombre" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Correo electrónico</label>
                        <input type="email" id="email" name="email" placeholder="ejemplo@correo.com" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" id="password" name="password" placeholder="8+ caracteres" required>
                    </div>
                    <div class="form-group">
                        <label for="confirm-password">Confirmar contraseña</label>
                        <input type="password" id="confirm-password" name="confirmPassword" placeholder="Confirma tu contraseña" required>
                    </div>

                    <div class="button-contenedor">
                        <button type="submit" class="create-btn">Registrarme</button>
                    </div>
                </form>

                <p class="auth-link">¿Ya tienes cuenta? <a asp-controller="Login" asp-action="Login">Iniciar sesión</a></p>
            </div>

            <div class="auth-right">
                <div class="grid-item">
                    <img src="@Url.Content("~/images/halcon1.png")" />
                </div>
            </div>
        </div>
    </section>

